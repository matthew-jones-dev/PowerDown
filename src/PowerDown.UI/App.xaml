<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PowerDown.UI.App"
             RequestedThemeVariant="Dark">
    <Application.Resources>
        <Color x:Key="AppBgTop">#0E1116</Color>
        <Color x:Key="AppBgBottom">#0A0C10</Color>
        <LinearGradientBrush x:Key="AppBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource AppBgTop}" Offset="0.0" />
            <GradientStop Color="{StaticResource AppBgBottom}" Offset="1.0" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="CardBackground" Color="#141A22"/>
        <SolidColorBrush x:Key="CardBorder" Color="#222B37"/>
        <SolidColorBrush x:Key="Accent" Color="#37D4A2"/>
        <SolidColorBrush x:Key="AccentSoft" Color="#1F4B3F"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="TextMuted" Color="#94A3B8"/>
        <CornerRadius x:Key="CardRadius">12</CornerRadius>
        <Thickness x:Key="CardBorderThickness">1</Thickness>
        <FontFamily x:Key="DisplayFont">Bahnschrift</FontFamily>
        <FontFamily x:Key="BodyFont">Segoe UI</FontFamily>
    </Application.Resources>
    <Application.Styles>
        <FluentTheme />
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="{StaticResource BodyFont}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#0F141B"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style Selector="NumericUpDown">
            <Setter Property="Background" Value="#0F141B"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#1C232C"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{StaticResource Accent}"/>
            <Setter Property="Foreground" Value="#0B0F14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.ghost">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
        </Style>
    </Application.Styles>
</Application>
